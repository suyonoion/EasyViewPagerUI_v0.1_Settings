<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bingkai_tombol"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/txt_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Agar ngefek, diperlukan tindakan Restart SystemUI, Yakin ?"
                android:textColor="#ffffffff"
                android:textSize="15dp"
                android:padding="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Ya"
                android:layout_weight="1"
                android:background="#ff1f8606"
                android:textColor="#ffffffff"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Nanti Saja"
                android:layout_weight="1"
                android:background="#ffdc2623"
                android:textColor="#ffffffff"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optional ( Bonus )"
        android:id="@+id/textView"
        android:padding="5dp"
        android:textColor="#ffffffff"
        android:background="#8023a606"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bingkai_halaman"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/bonus_reboot"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reboot Phone"
                    android:id="@+id/btn_reb"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/bingkai_tombol"
                    android:textColor="#ffffffff"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/bonus_recovery"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reboot Recovery"
                    android:id="@+id/btn_rec"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/bingkai_tombol"
                    android:textColor="#ffffffff"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/bonus_shutdown"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shutdown Phone"
                    android:id="@+id/shut"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/bingkai_tombol"
                    android:textColor="#ffffffff"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>